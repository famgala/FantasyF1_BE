# FantasyF1 Environment Variables
# Copy this file to .env and fill in your values

# ========================================================================
# SECURITY - MUST CHANGE IN PRODUCTION
# ========================================================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================================================
# DATABASE CONFIGURATION
# ========================================================================
POSTGRES_USER=fantasyf1_user
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=fantasyf1_db
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ========================================================================
# REDIS CONFIGURATION
# ========================================================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ========================================================================
# MQTT CONFIGURATION
# ========================================================================
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

# ========================================================================
# APPLICATION CONFIGURATION
# ========================================================================
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ========================================================================
# PORTS
# ========================================================================
POSTGRES_PORT=5432
REDIS_PORT=6379
MQTT_PORT=1883
BACKEND_PORT=8000
FRONTEND_PORT=3000
FLOWER_PORT=5555

# ========================================================================
# DOCKER IMAGES
# ========================================================================
# For production use: famgala/fantasyf1-be:latest
# For test use: famgala/fantasyf1-be:test-latest
# For dev use: fantasyf1-be-dev:latest (local only)
BACKEND_IMAGE=famgala/fantasyf1-be:latest

# For production use: famgala/fantasyf1-fe:latest
# For test use: famgala/fantasyf1-fe:test-latest
# For dev use: fantasyf1-fe-dev:latest (local only)
FRONTEND_IMAGE=famgala/fantasyf1-fe:latest

# ========================================================================
# FRONTEND CONFIGURATION
# ========================================================================
# This must match the backend URL that the frontend will call
VITE_API_BASE_URL=http://localhost:8000

# ========================================================================
# ENVIRONMENT SPECIFIC VALUES (REFERENCE)
# ========================================================================

# --- DEVELOPMENT (.env or .env.development) ---
# Branch: dev/issue_or_feature_name (e.g., dev/fix-frontend-registration)
# Backend Image: fantasyf1-be-dev:latest (local build only)
# Frontend Image: fantasyf1-fe-dev:latest (local build only)
# ENVIRONMENT=development
# DEBUG=true
# POSTGRES_USER=fantasyf1_dev
# POSTGRES_DB=fantasyf1_dev_db
# BACKEND_IMAGE=fantasyf1-be-dev:latest
# FRONTEND_IMAGE=fantasyf1-fe-dev:latest
# Note: No CI builds, no registry pushes for dev/* branches

# --- TEST (.env.test) ---
# Branch: test/issue_or_feature_name (e.g., test/fix-frontend-registration)
# Backend Image: famgala/fantasyf1-be:test-latest
# Frontend Image: famgala/fantasyf1-fe:test-latest
# ENVIRONMENT=test
# DEBUG=false
# POSTGRES_USER=fantasyf1_test_user
# POSTGRES_DB=fantasyf1_test_db
# BACKEND_IMAGE=famgala/fantasyf1-be:test-latest
# FRONTEND_IMAGE=famgala/fantasyf1-fe:test-latest
# CORS_ORIGINS=http://test.yourdomain.com
# Note: CI builds and pushes to Docker Hub with test tags

# --- PRODUCTION (.env.production) ---
# Branch: main (fixed branch name)
# Backend Image: famgala/fantasyf1-be:latest
# Frontend Image: famgala/fantasyf1-fe:latest
# ENVIRONMENT=production
# DEBUG=false
# POSTGRES_USER=fantasyf1_prod_user
# POSTGRES_DB=fantasyf1_prod_db
# BACKEND_IMAGE=famgala/fantasyf1-be:latest
# FRONTEND_IMAGE=famgala/fantasyf1-fe:latest
# CORS_ORIGINS=https://yourdomain.com
# SECRET_KEY=CHANGE_THIS_IN_PRODUCTION
# JWT_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION
# Note: CI builds and pushes to Docker Hub with latest tags, manual approval required
