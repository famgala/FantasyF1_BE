# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf

# JSON
*.json text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Dockerfile
Dockerfile* text eol=lf

# Markdown
*.md text eol=lf

# CSS
*.css text eol=lf

# HTML
*.html text eol=lf

# Config files
.env* text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf

# Workflow files
*.yml text eol=lf

# Binary files (do not convert)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary